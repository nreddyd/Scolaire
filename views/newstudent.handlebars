<div class="newstudent">
  <form class="clearfix mb-4" action="POST">
    <h3>Add a new student:</h3>
    <div class="form-group col-6 offset-3">
      <label for="example-text">Student Name</label>
      <input type="text" id="example-text" class="form-control" aria-describedby="example-text" placeholder="Enter Student Name">
    </div>
    <div class="form-group col-6 offset-3">
      <label for="example-description">Teacher Last Name</label>
      <textarea class="form-control" id="example-description" aria-describedby="example-description" placeholder="Enter Teacher Name"></textarea>
    </div>
    <button id="submit" class="btn btn-primary align-center">Submit</button>
  </form>
</div>
